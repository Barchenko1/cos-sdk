        <mapping class="com.core.im.modal.order.OrderHistory" />

        <mapping class="com.core.im.modal.user.UserRole" />
        <mapping class="com.core.im.modal.user.UserDetails" />
        <mapping class="com.core.im.modal.user.UserPayment" />
        <mapping class="com.core.im.modal.user.UserAddress" />

        <mapping class="com.core.im.modal.product.ProductType" />
        <mapping class="com.core.im.modal.product.Discount" />
        <mapping class="com.core.im.modal.product.Brand" />
        <mapping class="com.core.im.modal.product.Category" />

        <mapping class="com.core.im.modal.post.Comment" />
        <mapping class="com.core.im.modal.post.Post" />

        <mapping class="com.core.im.modal.shop.ShopAddress" />
        <mapping class="com.core.im.modal.store.StoreAddress" />

        <mapping class="com.core.im.modal.store.Store" />
